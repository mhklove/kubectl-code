apiVersion: apps/v1 # for versions before 1.9.0 use apps/v1beta2
kind: Deployment
metadata:
  name: dev-project
spec:
  selector:
    matchLabels:
      app: dev-project
  replicas: 5 # tells deployment to run 2 or more pods matching the template
  strategy:
    type: RollingUpdate
    rollingUpdate:
      maxSurge: 1
      maxUnavailable: 1

  template:
    metadata:
      labels:
        app: dev-project
    spec:
      containers:
      - name: dev-project
        image: ladbam/development
        imagePullPolicy: Always
        ports:
        - containerPort: 8080